{
  "name": "gluon-ergo-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "check:sdk": "node -e \"const fs=require('fs'); if(!fs.existsSync('lib/gluon-gold-sdk/dist')){ process.exit(1) }\" || bun run build:sdk",
    "dev": "bun run check:sdk && next dev",
    "buildtest": "next build",
    "build": "bun run build:sdk && next build",
    "start": "next start",
    "lint": "next lint",
    "build:sdk": "cd lib/gluon-gold-sdk && bun install && bun run build",
    "test": "vitest",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "workspaces": ["lib/*"],
