    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@react-three/fiber": "^9.1.4",
    "@types/lodash": "^4.17.17",
    "@types/three": "^0.177.0",
    "axios": "^1.9.0",
    "bignumber.js": "^9.3.0",
